@{
    ViewData["Title"] = "Home Page";
}
<h1>Enviar Arquivo</h1>
<hr/>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <section>
                <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="LerArquivo">
                    <div class="form-group">
                        <div class="">
                            <p>Escolher um arquivo: </p>
                            <label for="images" class="drop-container" id="dropcontainer">
                                <span class="drop-title">Solte o arquivo aqui</span>
                                ou
                                <input type="file" name="arquivo"/>
                            </label>
                        </div><br>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-primary" value="Enviar Arquivo"/>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>
