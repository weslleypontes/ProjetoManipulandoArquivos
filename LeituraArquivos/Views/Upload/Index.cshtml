@{
    ViewData["Title"] = "Enviar Arquivo";
}
<h1 class ="text-white">Enviar Arquivo</h1>
<hr class ="text-white" />
@if(TempData["Erro"] != null)
{
    <center>
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div>
                <strong>@TempData["Erro"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </center>
}
@if(TempData["Sucesso"] != null)
{
    <center>
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
            <div>
                <strong>@TempData["Sucesso"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </center>
}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <section>
                <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="EnviarAquivo">
                    <div class="form-group">
                        <div class="">
                            <p class="text-white">Escolher um arquivo: </p>
                            <label for="images" class="drop-container" id="dropcontainer">
                                <span class="drop-title">Solte o arquivo aqui</span>
                                ou
                                <input type="file" name="arquivos" />
                            </label>
                        </div><br>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-info text-white" value="Enviar Arquivo" />
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>
